

<div id='secondary-header'></div>
<div class="room-container">
	<%= form_for :email_info do |e| %>
		<span class="user-email">Your email address:
		<%= e.text_field :sender_email, id: 'user-email-address', placeholder: 'please enter your email address'%></span><br />
		<%= e.text_area :email_content, id: 'email-content' %><br />
		<%= e.submit 'send email', :class => 'submit-email' %>
	<% end %>
</div>

<div id='admin-links'>
	<% if !session[:user_id].nil? && @current_user.admin %>
		<%= link_to 'Edit', edit_room_info_path(@info) %>
	<% end %>
</div>
