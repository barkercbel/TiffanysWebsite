
<div id='secondary-header'></div>

<br />

<% if !session[:user_id].nil? && @current_user.admin %>
	<%= link_to 'New Galley Image', new_gallery_path, :class => 'admin-button' %>
<% end %>

<div id="gallery-page-container" >
	<% @galleries.each do |item| %>
		<div class="gallery-component-div">
			<%= react_component('GalleryParent', { title: item.title, image_url: item.image.url(:thumb), price: item.price, description: item.description, id: item.id, loggedOut: @cart.nil? }) %>
		</div>
	<% end %>
</div>
